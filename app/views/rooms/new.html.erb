<div class="room-new-wrapper">
  <div class="room-new-container">
    <h2>新規登録</h2>
    <%= form_with model: @room, url: rooms_path do |f| %>
      <div class="room-form">
        <div class="room-form-input">
          <%= f.label :name ,"施設名", class: "required_input_label" %>
          <%= f.text_field :name, placeholder: "施設の名前を入力", class: "input-field" %>
        </div>
        <div class="room-form-input">
          <%= f.label :details ,"施設詳細", class: "required_input_label" %>
          <%= f.text_area :details, placeholder: "施設の詳細を入力", class: "input-area" %>
        </div>
        <div class="room-form-input">
          <%= f.label :price ,"料金", class: "required_input_label" %>
          <%= f.number_field :price, placeholder: "一日あたりの料金を入力", class: "input-field no-spin" %>
        </div>
        <div class="room-form-input">
          <%= f.label :address ,"住所", class: "required_input_label" %>
          <%= f.text_field :address, placeholder: "施設の住所を入力", class: "input-field" %>
        </div>
        <div class="room-form-upload">
          <label>施設画像</label>
          <%= f.label :room_image ,"画像アップロード", class: "image-upload-button" %>
          <%= f.file_field :room_image %>
        </div>

        <%= f.hidden_field :user_id, value: current_user.id %>

        <div class="cancel-submit-buttons">
          <%= f.submit "登録", class: "add-button" %>
          <%= link_to "キャンセル", root_path, class: "cancel-button" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
